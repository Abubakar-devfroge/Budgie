<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default="Budgie" suffix=" Â· Budgie">
      {assigns[:page_title]}
    </.live_title>

    <link rel="icon" type="image/x-icon" href={~p"/images/logo1.svg"} />

    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
    <script>
      (() => {
        const setTheme = (theme) => {
          if (theme === "system") {
            localStorage.removeItem("phx:theme");
            document.documentElement.removeAttribute("data-theme");
          } else {
            localStorage.setItem("phx:theme", theme);
            document.documentElement.setAttribute("data-theme", theme);
          }
        };
        if (!document.documentElement.hasAttribute("data-theme")) {
          setTheme(localStorage.getItem("phx:theme") || "system");
        }
        window.addEventListener("storage", (e) => e.key === "phx:theme" && setTheme(e.newValue || "system"));
        
        window.addEventListener("phx:set-theme", (e) => setTheme(e.target.dataset.phxTheme));
      })();
    </script>
  </head>
  <body>
    <header class="navbar px-4 sm:px-6 lg:px-8 bg-white border-b border-gray-200 flex items-center h-22">
      <%!-- logo --%>
      <div class="flex-1">
        <a href="/" class="flex w-fit items-center gap-2">
          <span class="text-3xl font-extrabold text-[#B20710]">Budgie</span> 
        </a>
      </div>

      <%!-- desktop nav --%>
      <div class="hidden sm:flex flex-none">
        <ul class="flex items-center space-x-4 px-1">
          <%= if @current_scope do %>
            <li class="flex items-center space-x-4">
              <.link
                href={~p"/home"}
                class=" font-medium text-gray-700 hover:bg-gray-100 rounded-md px-6 py-2 transition"
              >
                Home
              </.link>

              <.link
                href={~p"/users/settings"}
                class=" font-medium text-gray-700 hover:bg-gray-100 rounded-md px-6 py-2 transition"
              >
                Invoices
              </.link>
              <.link
                href={~p"/users/settings"}
                class=" font-medium text-gray-700 hover:bg-gray-100 rounded-md px-6 py-2 transition"
              >
                Settings
              </.link>

              <.link
                href={~p"/users/log-out"}
                method="delete"
                class="font-medium  text-black rounded-md px-6 py-2 hover:bg-gray-100 transition"
              >
                Log out
              </.link>
            </li>
          <% else %>
            <li>
              <.link
                href={~p"/users/log-in"}
                class="font-medium  text-black rounded-md px-6 py-2 hover:bg-gray-100 transition"
              >
                Sign in
              </.link>
            </li>
          <% end %>
        </ul>
      </div>

      <%!-- mobile nav icon --%>
      <div class="sm:hidden relative">
        <button id="menu-button" class="text-gray-900 focus:outline-none">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-7 w-7"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            />
          </svg>
        </button>

        <%!-- mobile nav --%>
        <div
          id="mobile-menu"
          class="fixed inset-0 bg-white z-50 flex flex-col px-6 py-8 transform scale-y-0 origin-top opacity-0 transition-all duration-300 ease-in-out"
        >
          <div class="flex justify-between items-center mb-10">
            <span class="text-2xl font-extrabold text-[#B20710]">Budgie</span>

            <button
              class="text-6xl cursor-pointer h-7 w-7 text-gray-900"
              aria-label="Close"
              id="menu-close"
            >
              &times;
            </button>
          </div>

          <nav class="flex flex-col space-y-6 text-lg">
            <%= if @current_scope do %>
              <.link href={~p"/home"} class="font-medium text-gray-900">
                Home
              </.link>

              <.link href={~p"/users/settings"} class="font-medium text-gray-900">
                Settings
              </.link>
              <.link
                href={~p"/users/log-out"}
                method="delete"
                class="font-medium bg-black text-white rounded-md px-6 py-2 text-center w-full block"
              >
                Log out
              </.link>
            <% end %>
          </nav>

          <div class="mt-auto">
            <%= unless @current_scope do %>
              <.link
                href={~p"/users/log-in"}
                class="font-medium bg-black text-white rounded-md px-6 py-2 text-center w-full block"
              >
                Sign in
              </.link>
            <% end %>
          </div>
        </div>
      </div>
    </header>

    {@inner_content}
  </body>

  <%!-- js for nav --%>
  <script>
    const menuButton = document.getElementById('menu-button')
    const menuClose = document.getElementById('menu-close')
    const mobileMenu = document.getElementById('mobile-menu')

    menuButton.addEventListener('click', () => {
      mobileMenu.classList.remove('scale-y-0', 'opacity-0')
      mobileMenu.classList.add('scale-y-100', 'opacity-100')
    })

    menuClose.addEventListener('click', () => {
      mobileMenu.classList.add('scale-y-0', 'opacity-0')
      mobileMenu.classList.remove('scale-y-100', 'opacity-100')
    })
  </script>
</html>
